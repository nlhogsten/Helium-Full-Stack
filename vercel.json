{
  "version": 2,
  "builds": [
    {
      "src": "localization-management-frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next",
        "middleware": true
      }
    },
    {
      "src": "localization-management-api/vercel.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "/localization-management-api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/localization-management-frontend/$1"
    }
  ]
}